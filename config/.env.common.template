# =============================================================================
# Common Environment Variables Template
# =============================================================================
# This file contains common environment variables shared across all services.
# Copy this to each service directory and customize as needed.
#
# SECURITY WARNING: Never commit .env files to Git!
# =============================================================================

# -----------------------------------------------------------------------------
# MongoDB Configuration
# -----------------------------------------------------------------------------
MONGO_URI=mongodb+srv://USERNAME:PASSWORD@your-cluster.mongodb.net/?retryWrites=true&w=majority
MONGO_DB=YOUR_DATABASE_NAME
MONGO_MAX_POOL_SIZE=200
MONGO_MIN_POOL_SIZE=10

# -----------------------------------------------------------------------------
# Internal API Keys (Same for all services)
# -----------------------------------------------------------------------------
INTERNAL_API_KEY=YOUR_INTERNAL_API_KEY_HERE
API_MASTER_KEY=YOUR_INTERNAL_API_KEY_HERE

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
GLOBAL_RPS=20
EXTERNAL_API_RPS=23
GLOBAL_RPM=2500

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=info
LOG_FORMAT=json
LOG_TO_FILE=true
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE_MB=100
LOG_MAX_BACKUPS=5
LOG_MAX_AGE_DAYS=30
LOG_COMPRESS=true
