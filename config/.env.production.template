# =============================================================================
# Production Environment Variables Template
# =============================================================================
# Copy this file to each service repository as .env
# Customize the service-specific settings
#
# IMPORTANT: This is for PRODUCTION environment
# =============================================================================

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
PORT=XXXX  # Service specific: 8082, 8083, 8084, 8085
ENVIRONMENT=production

# -----------------------------------------------------------------------------
# MongoDB Configuration
# -----------------------------------------------------------------------------
MONGO_URI=mongodb+srv://USERNAME:PASSWORD@your-cluster.mongodb.net/?retryWrites=true&w=majority
MONGO_DB=production_database  # Production database
MONGO_MAX_POOL_SIZE=200
MONGO_MIN_POOL_SIZE=10

# -----------------------------------------------------------------------------
# API Keys
# -----------------------------------------------------------------------------
INTERNAL_API_KEY=YOUR_INTERNAL_API_KEY_HERE
API_MASTER_KEY=YOUR_INTERNAL_API_KEY_HERE

# -----------------------------------------------------------------------------
# RapidAPI Configuration
# -----------------------------------------------------------------------------
EXTERNAL_API_KEY=YOUR_RAPIDAPI_KEY
EXTERNAL_API_HOST=tiktok-api23.p.rapidapi.com

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
GLOBAL_RPS=20
EXTERNAL_API_RPS=23
GLOBAL_RPM=2500
MAX_RETRIES=5
HTTP_TIMEOUT_MS=10000

# -----------------------------------------------------------------------------
# Circuit Breaker
# -----------------------------------------------------------------------------
CB_MAX_REQUESTS=5
CB_TIMEOUT_SEC=60
CB_FAILURE_THRESHOLD=0.8
CB_MIN_REQUESTS=5

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=info
LOG_FORMAT=json
LOG_TO_FILE=true
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE_MB=100
LOG_MAX_BACKUPS=5
LOG_MAX_AGE_DAYS=30
LOG_COMPRESS=true

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Origin,Content-Type,Authorization,X-API-Key

# -----------------------------------------------------------------------------
# Metrics
# -----------------------------------------------------------------------------
METRICS_ENABLED=true
METRICS_PORT=9090
